# =============================================================================
# SaaS Guard Backend - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Node environment: development, staging, production
NODE_ENV=development

# Server port
PORT=3000

# Log level: debug, info, warn, error
LOG_LEVEL=info

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/saasguard

# =============================================================================
# REDIS CONFIGURATION (Upstash)
# =============================================================================

# Upstash Redis REST URL
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io

# Upstash Redis REST Token
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# =============================================================================
# CLERK AUTHENTICATION
# =============================================================================

# Clerk Secret Key (from Clerk Dashboard)
CLERK_SECRET_KEY=sk_test_xxxxxxxxxxxxx

# Clerk Publishable Key (from Clerk Dashboard)
CLERK_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxx

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins (comma-separated for multiple)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Request timeout in milliseconds
REQUEST_TIMEOUT=30000

# Enable request logging (true/false)
ENABLE_REQUEST_LOGGING=true

# Cache TTL in seconds (default: 300 = 5 minutes)
CACHE_TTL=300
